        <h2>Mes réalisations</h2>
      </div>
    <% end %>
    <%= link_to new_contact_path do %>
      <div class="card-category">
        <img src="<%= asset_url('letter.jpg') %>" id="photo-contact">
        <h2>Me contacter</h2>
      </div>
  <% end %>
  </div>
</div>


<div class="container-fluid" style="margin-bottom: 2% !important; margin-top: 0 !important">
  <h1>Mes dernières réalistaions</h1>
  <br>
  <div class="carde">
    <%  @items.each do |item| %>
    <%= link_to  item_path(item) do %>
    <div class="card-trip">
        <% tof=[] %>
      <% item.photos.each do |photo| %>
      <% tof.push(photo.key) %>
        <% end %>
      <%= cl_image_tag tof.first, :crop=>"fill", :quality=>"auto"  %>

      <div class="card-trip-infos">
        <div>
          <h2 style="color: black !important;"><%= item.name %></h2>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $("#down").click(function() {
    $('html,body').animate({
      scrollTop: $(".presentation").offset().top},
      'slow');
  });
</script>
