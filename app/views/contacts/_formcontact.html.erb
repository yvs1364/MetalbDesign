    <h2 id="h2form">M'écrire:</h2>
    <%= simple_form_for @contact do |f| %>
        <% if flash[:error].present? %>
            <p> flash[:error]</p>
        <% end %>
        <%= f.input :nom, input_html: {placeholder: "Nom et Prénom"}, label: false %>

        <%= f.input :tel, input_html: { placeholder: "Numéro de téléphone"}, label: false %>

        <%= f.input :email, input_html: {placeholder: "Adresse Email"}, error: "Adresse email invalide", label: false %>

        <%= f.input :message, as: :text, input_html: {placeholder: " Votre Message"}, id: "area",label: false  %>

        <%= f.submit "Envoyez", class: "btn btn-dark", id: "formbBtn" %>
    <% end %>
